 / {
    compatible = "zmk,keyboard";
    chosen {
        zmk,split-role = "central";
    };

    // No key matrix â€” this unit only acts as a USB/BLE bridge
    zmk,usb {
        compatible = "zmk,usb";
        status = "okay";
    };

    bt-central {
        compatible = "zmk,bluetooth";
        local-name = "LoPro Cosmos 3";
    };
};
